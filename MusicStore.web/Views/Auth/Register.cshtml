
@{
    ViewBag.Title = "Register";
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="auth-form">
    <h2>Create an account</h2>
    <p>Enter your information to get started</p>
    
    <form method="post">
        <div class="form-group">
            <label for="fullName">Full Name</label>
            <input type="text" id="fullName" name="fullName" class="form-control" placeholder="Enter your name" required />
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Create a password" required />
        </div>
        <div class="form-group">
            <label for="accountType">Account Type</label>
            <select id="accountType" name="accountType" class="form-control" required>
                <option value="">Select account type</option>
                <option value="personal">Personal</option>
                <option value="business">Business</option>
            </select>
        </div>
        <button type="submit" class="btn btn-dark w-100 mt-3">Create Account</button>
        <p class="text-center mt-2">
            Already have an account? <a href="@Url.Action("Login", "Auth")">Sign in</a>
        </p>
    </form>
</div>


        
    
